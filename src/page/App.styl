// global (default)
:global {

  typographic()
  // grid-overlay(blue, 2)

  *, *:before, *:after {
    box-sizing: inherit;
    border: 0;
    margin: 0;
    padding: 0;
  }

  html, body {
    width:  100%;
    min-height: 100%;
  }

  html {
    box-sizing: border-box;
    height: 100%;
  }

  body {
    position: relative;
    height: auto;
    background-color: $color-primary-4;
  }

  a {
    outline: none;
    text-decoration: none;
    color: inherit;
  }

  ul, h2, h3 {
    margin: 0;
    padding: 0;
  }

  ol {
    list-style: none;
  }
}

.App {
  background-color: $color-white;
}
