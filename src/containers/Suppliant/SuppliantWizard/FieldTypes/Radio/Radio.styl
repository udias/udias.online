.Radio {

}

.Options {
  lost-flex-container: row;
}

.Option {
  lost-column: 1/3;
  display: inline-block;
}

.Input {
  visibility: hidden;
}

.Label {
  display: inline-block;
  padding: 0;
  opacity: 0.5;
  cursor: pointer;
}

[checked] ~ .Label {
  border-bottom: 2px solid black;
  opacity: 1;
}
